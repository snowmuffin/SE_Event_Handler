<Window x:Class="TorchPlugin.CustomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Plugin Manager" Height="1200" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Header Section -->
        <TextBlock Text="Custom Plugin Manager" FontSize="20" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="2" Margin="10"/>
        <Button Content="Refresh" Width="100" Height="30" Margin="251,8,129,9" Click="RefreshButton_Click"/>

        <TabControl Grid.Row="1" Grid.ColumnSpan="2" Margin="10">
            <!-- Existing Tabs -->

            <TabItem Header="Factions">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
            
                        <!-- Factions List Section -->
                        <GroupBox Header="Factions List" Margin="0,0,0,20">
                            <StackPanel>
                                <ListView Name="FactionsList" Height="200" SelectionChanged="FactionsList_SelectionChanged">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Header="Faction ID" DisplayMemberBinding="{Binding FactionId}" Width="100"/>
                                            <GridViewColumn Header="Tag" DisplayMemberBinding="{Binding Tag}" Width="100"/>
                                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="150"/>
                                            <GridViewColumn Header="Founder ID" DisplayMemberBinding="{Binding FounderId}" Width="100"/>
                                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" Width="200"/>
                                            <GridViewColumn Header="Score" DisplayMemberBinding="{Binding Score}" Width="80"/>
                                            <GridViewColumn Header="Objective Completion" DisplayMemberBinding="{Binding ObjectivePercentageCompleted}" Width="150"/>
                                            <GridViewColumn Header="Members Count" DisplayMemberBinding="{Binding MembersCount}" Width="100"/>
                                            <GridViewColumn Header="Accepts Humans" DisplayMemberBinding="{Binding AcceptHumans}" Width="100"/>
                                            <GridViewColumn Header="Auto Accept Peace" DisplayMemberBinding="{Binding AutoAcceptPeace}" Width="120"/>
                                            <GridViewColumn Header="Auto Accept Member" DisplayMemberBinding="{Binding AutoAcceptMember}" Width="120"/>
                                            <GridViewColumn Header="Custom Color" DisplayMemberBinding="{Binding CustomColor}" Width="100"/>
                                            <GridViewColumn Header="Icon Color" DisplayMemberBinding="{Binding IconColor}" Width="100"/>
                                            <GridViewColumn Header="Faction Type" DisplayMemberBinding="{Binding FactionType}" Width="100"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </StackPanel>
                        </GroupBox>
            
                        <!-- Members Section -->
                        <GroupBox Header="Faction Members and Reputation" Margin="0,0,0,20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Members Grid -->
                                <DataGrid Name="MembersGrid" AutoGenerateColumns="True" Height="200" Grid.Column="0" Margin="0,0,10,0"/>
                                
                                <!-- Reputation Grid -->
                                <DataGrid Name="ReputationGrid" AutoGenerateColumns="False" Height="200" Grid.Column="1" CellEditEnding="ReputationGrid_CellEditEnding">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Player ID" Binding="{Binding PlayerId}" IsReadOnly="True" Width="*"/>
                                        <DataGridTextColumn Header="Player Name" Binding="{Binding PlayerName}" IsReadOnly="True" Width="*"/>
                                        <DataGridTextColumn Header="Reputation" Binding="{Binding Reputation, Mode=TwoWay}" Width="*"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>
                        <!-- Stations and Store Section -->
                        <GroupBox Header="Faction Stations and Store Items" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Stations" FontWeight="Bold" Margin="0,0,0,5"/>
                                <DataGrid Name="StationsGrid" AutoGenerateColumns="True" Height="200" SelectionChanged="StationsGrid_SelectionChanged"/>
                                <TextBlock Text="Store Items" FontWeight="Bold" Margin="10,10,0,5"/>
                                <DataGrid Name="StoreItemsGrid" AutoGenerateColumns="True" Height="200"/>
                            </StackPanel>
                        </GroupBox>
            


            
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <!-- New Tab for Global Events -->
            <TabItem Header="Global Events">
                <StackPanel>
                    <TextBlock Text="Global Events" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid Name="GlobalEventsGrid" AutoGenerateColumns="True" Height="400"/>
                    <TextBlock Text="MyGlobalEvents" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                    <DataGrid Name="MyGlobalEventsGrid" AutoGenerateColumns="True" Height="400"/>
                </StackPanel>
            </TabItem>

            <!-- New Tab for Global Encounters -->
            <TabItem Header="Encounters">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Global Encounters" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <DataGrid Name="GlobalEncountersGrid" AutoGenerateColumns="True" Height="400"/>
                        <TextBlock Text="Spawn Groups" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <DataGrid Name="SpawnGroupGrid" AutoGenerateColumns="True" Height="400"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- New Tab for Custom Spawn -->
            <TabItem Header="Custom Spawn">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Custom Spawn" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Select Player:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Name="PlayerDropdown" Width="200" DisplayMemberPath="DisplayName" SelectedValuePath="Player" SelectedValue="{Binding SelectedPlayer}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Select Spawn Group:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Name="SpawnGroupDropdown" Width="200" DisplayMemberPath="GroupId" SelectedValuePath="Group" SelectedValue="{Binding SelectedSpawnGroup}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Spawn" Width="100" Click="SpawnButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>